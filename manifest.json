{
    "manifest_version": 2,
    "name": "Local Update",
    "version": "0.0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://print.stamps.com/*"],
            "js": ["content-script.js"]
        }
    ],
    "web_accessible_resources": ["inject-script.js"],
    "externally_connectable": {
        "matches": ["https://*.stamps.com/*"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "UserPrefs"
    },
    "permissions": ["tabs", "activeTab"]
}
